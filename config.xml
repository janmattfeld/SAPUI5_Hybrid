<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "de.abat.sapui5.hybrid"
        versionCode = "10" 
        version     = "1.0.0" >

    <name>abat UI5 Hybrid</name>

    <description>
        Using Camera, Barcodescanner and Device ID with UI5.
    </description>

    <author href="https://www.abat.de" email="jam@abat.de">
        abat AG
    </author>

	<icon src="./img/114_iPhone-Retina_Web_Clip.png" />
	
	<preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="StatusBarBackgroundColor" value="#009DE0" />
	<preference name="StatusBarStyle" value="lightcontent" />
	
	<gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<gap:plugin name="cordova-plugin-device" version="1.0.1" />
	<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
	<gap:plugin name="cordova-plugin-camera" version="1.2.0" />
	<gap:plugin name="com.phonegap.plugins.barcodescanner" version="2.2.0" />
	
	<access origin="*"/>

	<allow-intent href="http://*/*"/>
	<allow-intent href="https://*/*"/>
	<allow-intent href="tel:*"/>
	<allow-intent href="sms:*"/>
	<allow-intent href="mailto:*"/>
	<allow-intent href="geo:*"/>
	
</widget>
